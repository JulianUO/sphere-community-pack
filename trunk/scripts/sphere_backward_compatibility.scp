[FUNCTION FOLLOW]
SRC.SYSMESSAGE  Follow: on - Use war mode to stop following
SERV.NEWITEM i_eq_followSrc
IF ( !<ARGN> )
	NEW.LINK=<UID>
ELSE
	NEW.LINK=<ARGN>
endif
NEW.TIMER=2
SRC.EQUIP <NEW.UID>

[ITEMDEF i_eq_followSrc]
ID=i_handr_1
NAME="Follower"
TYPE=T_eq_script
LAYER=layer_special
WEIGHT=0

ON=@targon_Char
	link=<argo>

ON=@targon_Item
	link=<argo>

ON=@timer
	if (!(<link.uid>) || !(<topobj.ischar>))
		remove
		return 0
	endif
	if (<topobj.flags> & statf_war)
		topobj.sysmessage Follow:off
		remove
		return 0
	endif
	topobj.face <link.uid>
	topobj.p <link.topobj.p>
	topobj.update
	timer 2
	return 1

