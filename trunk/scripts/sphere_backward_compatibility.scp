[FUNCTION static] //by Thomas20198701
IF !(<ARGN>)
	IF (<ISEMPTY <DEF.<ARGS>>>)
		SYSMESSAGE Not a valid command or format.
		RETURN 0
	endif
endif
IF !(<ISEMPTY <ARGS>>)
	IF !(<SERV.ITEMDEF.<ARGS>>)
		SYSMESSAGE Not a valid command or format.
		RETURN 0
	endif
	TARGETFG static_ <ARGS>
	SYSMESSAGE Where would you like to place the <SERV.ITEMDEF.<ARGS>.NAME>?
	RETURN 1
endif
SYSMESSAGE Not a valid command or format.
RETURN 0

